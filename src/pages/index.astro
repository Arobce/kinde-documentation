---
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
import APICards from "@components/APICards.astro";
import FooterCards from "@components/FooterCards.astro";
import SDKSelector from "@components/SDKSelector.astro";
import SubscribeForm from "@components/SubscribeForm.astro";
import Topics from "@components/Topics.astro";
---

<StarlightPage
  frontmatter={{
    title: "Welcome",
    template: "splash",
    editUrl: false,
    page_id: "31b91e66-7f86-4fd9-b3c7-b4d0a2a86d6c"
  }}
>
  <div class="docs-index not-content">
    <section class="hero flex flex-col gap-6 pb-16 text-center">
      <h1 class="text-5xl font-medium">We’re here to help</h1>
      <p class="text-lg">Start using Kinde’s admin and developer tools to build your business</p>
      <button
        class="mx-auto flex w-full max-w-2xl items-center justify-start gap-2 rounded-lg border-[1px] border-kinde-grey-100 bg-transparent px-4 py-3 hover:cursor-pointer"
        kui-trigger="search"
      >
        <svg width="20" height="20" viewBox="0 0 20 20" class="astro-um6wvnws" data-icon="search">
          <symbol id="ai:local:search"
            ><path
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              d="m14.386 14.386 4.088 4.088-4.088-4.088A7.533 7.533 0 1 1 3.733 3.733a7.533 7.533 0 0 1 10.653 10.653z"
              class="text-kinde-grey-700 dark:text-white"></path></symbol
          ><use xlink:href="#ai:local:search"></use>
        </svg>
        <span class="astro-um6wvnws text-kinde-grey-700 dark:text-white">Search docs</span>
      </button>
    </section>
    <section class="sdks flex flex-col items-start gap-6 py-16 text-center">
      <h2 class="!text-4xl">SDKs</h2>
      <SDKSelector id="sdk-selector" />
    </section>
    <section class="apis flex flex-col items-start gap-6 py-16">
      <h2 class="!text-4xl">APIs</h2>
      <APICards />
    </section>
    <section class="sdks flex flex-col items-start gap-6 py-16">
      <h2 class="!text-4xl">Explore all you can do with Kinde</h2>
      <Topics />
    </section>
    <SubscribeForm />
    <FooterCards variant="white" />
  </div>
  <span id="docsearch-lvl0" hidden>Docs home</span>
</StarlightPage>

<style>
  .apis h3 {
    @apply text-2xl;
  }
</style>
